<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edt_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_48dp"
        android:layout_marginHorizontal="@dimen/spacing_21dp"
        android:layout_marginTop="@dimen/spacing_15dp"
        android:layout_marginBottom="@dimen/spacing_8dp"
        android:background="@drawable/bg_rounded_wild_sand_10dp"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="@dimen/spacing_12dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_vertical"
        android:hint="@string/txt_search_hint"
        android:imeOptions="actionSearch"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/spacing_16dp"
        android:paddingVertical="@dimen/spacing_12dp"
        android:textColor="@color/mine_shaft"
        android:textColorHint="@color/mine_shaft"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>